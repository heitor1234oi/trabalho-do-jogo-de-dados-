package com.exemplo.dicegame.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class HomeController {

    @GetMapping("/")
    public String home() {
        return "home"; // Mapeia para src/main/resources/templates/home.html
    }

    @GetMapping("/login")
    public String login() {
        return "login"; // Mapeia para src/main/resources/templates/login.html
    }
}
